#header
  text-shadow 0 0 1px #fff
  margin 30px auto
  margin-left auto
  margin-right auto
  width 650px
  max-width 100%

  a
    color color-heading
    &:hover
      text-decoration none
    
  h1

  h2
    margin-top 10px

  .outlink
    background-repeat no-repeat
    background-size contain
    background-position center center
    height 32px
    width 32px
    float left
    margin 10px 5px
    @media screen and (max-width: 600px)
      height 24px
      width 24px
  .outlink.twitter
    background-image url('../img/twitter.png') 
  .outlink.github
    background-image url('../img/github.png') 
  
  #main-nav
    font-family font-title
    line-height 2.5em
    float right
    ul
      list-style none
      li
        float left
        margin-left 30px
    @media screen and (max-width: 600px)
      float left
      margin-left -30px