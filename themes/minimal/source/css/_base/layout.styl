*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-default
  font-size 16px
  line-height 1.625
  text-shadow 0 0 1px transparent
  @media screen and (max-width: 1260px)
    margin 0 30px
  @media screen and (max-width: 600px)
    font-size 13px

h1, h2, h3, h4, h5, h6
  font-family font-title
  line-height 1.5

h1
  font-size 2.618em

h2
  font-size 1.618em

h3
  font-size 1em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 1260px)
    width 100%

#main-col
  width 650px
  @media screen and (max-width: 1260px)
    width 100%
    margin-right -300px
  @media screen and (max-width: 650px)
    margin-right 0
    float none
